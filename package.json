{
	"name": "sveltekit-electron",
	"version": "1.2.0",
	"private": true,
	"description": "Minimal Sveltekit + Electron starter template.",
	"author": "sovlookup",
	"main": "app/src/index.cjs",
	"type": "module",
	"scripts": {
		"bootstrap": "pnpm i -r",
		"release": "release-it",
		"prerelease": "release-it --preRelease",
		"commit": "git add . && pnpx gitmoji -c",
		"ok": "pnpm commit && pnpm release",
		"dev": "cross-env NODE_ENV=production pnpm build-electron && pnpm dev:all",
		"dev:all": "concurrently -n=bobuild,svelte,electron -c=yellow,'#ff3e00',blue \"pnpm build-electron-dev\" \"pnpm dev:svelte\" \"pnpm dev:electron\"",
		"build-electron": "node scripts/prebuild-electron.js && bob-ts -i src-electron -d app/src -f cjs",
		"build-electron-dev": "bob-ts-watch -i src-electron -d app/src -f cjs",
		"dev:svelte": "svelte-kit dev",
		"dev:electron": "pnpx electronmon .",
		"build": "cross-env NODE_ENV=production pnpm build-electron && pnpm build:svelte && pnpm build:electron",
		"build:svelte": "svelte-kit build",
		"build:electron": "pnpx electron-builder --config build.config.json  --publish always -c.snap.publish=github",
		"lint": "pnpx svelte-check --tsconfig ./tsconfig.json",
		"format": "pnpx prettier --write --plugin-search-dir=. .",
		"changelog": "pnpx gitmoji-changelog --group-similar-commits"
	},
	"devDependencies": {
		"@release-it/bumper": "^3.0.1",
		"@sveltejs/adapter-static": "^1.0.0-next.17",
		"@sveltejs/kit": "next",
		"@types/node": "^16.9.1",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"bob-ts": "^1.0.6",
		"concurrently": "^6.2.1",
		"cross-env": "^7.0.3",
		"diff-match-patch": "^1.0.5",
		"dotenv": "^10.0.0",
		"electron": "^14.0.1",
		"electron-builder": "^22.11.7",
		"electronmon": "^2.0.2",
		"esbuild": "^0.12.28",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte": "^1.1.2",
		"fs-extra": "^10.0.0",
		"gitmoji-changelog": "^2.2.1",
		"gitmoji-cli": "^4.6.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"release-it": "^14.11.5",
		"sass": "^1.41.0",
		"svelte": "^3.42.5",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.9.4",
		"tslib": "^2.3.1",
		"typescript": "^4.4.3",
		"vite": "^2.5.7"
	},
	"release-it": {
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/bumper": {
				"in": "package.json",
				"out": "src-electron/package.json"
			}
		},
		"hooks": {
			"before:init": "pnpm lint",
			"after:bump": "pnpm changelog",
			"before:git:release": "pnpm format",
			"after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
		}
	},
	"electronmon": {
		"patterns": [
			"!src/**/*",
			"!src-electron/**/*"
		]
	}
}
