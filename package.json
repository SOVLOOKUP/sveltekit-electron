{
	"name": "sveltekit-electron",
	"version": "0.0.1-1",
	"private": true,
	"description": "Minimal Sveltekit + Electron starter template.",
	"author": "sovlookup",
	"main": "build/src/index.cjs",
	"type": "module",
	"scripts": {
		"postinstall": "cd src-electron && pnpm i && cd ..",
		"release": "release-it",
		"prerelease": "release-it --preRelease",
		"dev": "npm run electron-tsup && NODE_ENV=development npm run dev:all",
		"dev:all": "concurrently -n=tsup,svelte,electron -c=yellow,'#ff3e00',blue \"npm run electron-tsup\" \"npm run dev:svelte\" \"npm run dev:electron\"",
		"electron-tsup": "node scripts/electron-tsup.js",
		"dev:svelte": "svelte-kit dev",
		"dev:electron": "cd build && node_modules/.bin/electron src/index.cjs",
		"build": "cross-env NODE_ENV=production npm run electron-tsup && npm run build:svelte && npm run build:electron",
		"build:svelte": "svelte-kit build",
		"build:electron": "cd build && node_modules/.bin/electron-builder --config build.config.json && cd .."
	},
	"devDependencies": {
		"@release-it/bumper": "^3.0.1",
		"@release-it/conventional-changelog": "^3.3.0",
		"@sveltejs/adapter-static": "^1.0.0-next.17",
		"@sveltejs/kit": "next",
		"@types/node": "^16.7.10",
		"@typescript-eslint/eslint-plugin": "^4.30.0",
		"@typescript-eslint/parser": "^4.30.0",
		"concurrently": "^6.2.1",
		"cross-env": "^7.0.3",
		"diff-match-patch": "^1.0.5",
		"dotenv": "^10.0.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte": "^1.1.2",
		"fs-extra": "^10.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.2",
		"prettier-plugin-svelte": "^2.4.0",
		"release-it": "^14.11.5",
		"sass": "^1.38.2",
		"svelte": "^3.42.4",
		"svelte-check": "^2.2.5",
		"svelte-preprocess": "^4.8.0",
		"tsup": "^4.14.0",
		"tslib": "^2.3.1",
		"typescript": "^4.4.2",
		"vite": "^2.5.2"
	},
	"release-it": {
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/bumper": {
				"in": "package.json",
				"out": "src-electron/package.json"
			},
			"@release-it/conventional-changelog": {
				"preset": "eslint",
				"infile": "CHANGELOG.md"
			}
		},
		"hooks": {
			"before:init": "node_modules/.bin/svelte-check --tsconfig ./tsconfig.json",
			"after:bump": "npm run build",
			"before:git:release": "node_modules/.bin/prettier --write --plugin-search-dir=. .",
			"after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
		}
	}
}
